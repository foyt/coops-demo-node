extend layout
block head
  script(type="text/javascript",src="/ckeditor/ckeditor.js")
  script(type="text/javascript",src="/edit-ckeditor.js")
  script(type="text/javascript",src="/collaborator-dialog.js")
block header
  div(class="login-info")
    |Logged in as #{loggedUser.name} 
    a(href="/auth/logout")
      |Logout
block content
  // img(src="/gfx/ckeditor-logo.png",class="view-image")
  img(src="/gfx/users.png",class="collaborators-button") 
  div(id="collaborators-dialog",style="display:none",title="Collaborators")
    div(class="ui-widget")
      div(class="collaborators-dialog-title")
        |Document users
      div(class="collaborators-dialog-users-container")
        table(class="ui-widget")
          each user in users
            tr
              td
                |#{user.name||user.email||'Anonymous'}
              td
                if (user.role === 'OWNER') 
                  select(data-id="#{user.userId}",disabled="disabled")
                    option(value="OWNER",SELECTED="selected")
                      |Owner
                else
                  select(data-id="#{user.userId}")
                    optgroup(label="Role")
                      if (user.role === 'WRITER') 
                        option(value="WRITER",SELECTED="selected")
                          |Writer
                      else
                        option(value="WRITER")
                          |Writer
                      if (user.role === 'READER') 
                        option(value="READER",SELECTED="selected")
                          |Reader
                      else
                        option(value="READER")
                          |Reader
                    optgroup(label="Remove")
                      option(value="NONE")
                        |Remove
    div(class="collaborators-add-container ui-widget")
      div(class="collaborators-dialog-title")
        |Add new collaborators
      input(id="collaborators-select")
  h2 
    |#{title}
  p(class="info-text")
    |ZaZaZaa ja LaaLaaLaa
  div(class="editor")
    div(id="ckcontainer")
block footer
  div(class="footer-left")
    a(href="https://github.com/anttileppa/coops-server-node")
      | https://github.com/anttileppa/coops-server-node
  div(class="footer-right")
    |��Icons from Crystal Clear and Kids iconsets by Everaldo Coelho and Free Social Icons iconset by Neil Hainsworth